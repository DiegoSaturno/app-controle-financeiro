<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.auth.SignUpActivity">
    <EditText
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:ems="10"
            android:id="@+id/firstNameTextView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="288dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:hint="Sobrenome"
            android:ems="10"
            android:id="@+id/lastNameTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/firstNameTextView"
            app:layout_constraintEnd_toEndOf="@+id/firstNameTextView"
            app:layout_constraintStart_toStartOf="@+id/firstNameTextView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:id="@+id/emailTextView"
            app:layout_constraintEnd_toEndOf="@+id/lastNameTextView"
            app:layout_constraintStart_toStartOf="@+id/lastNameTextView" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/lastNameTextView"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="573dp"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="@+id/emailTextView"
            app:layout_constraintEnd_toEndOf="@+id/emailTextView" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextView"
            app:layout_constraintStart_toStartOf="@+id/emailTextView"
            app:layout_constraintEnd_toEndOf="@+id/emailTextView"/>
</android.support.constraint.ConstraintLayout>