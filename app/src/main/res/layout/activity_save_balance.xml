<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.main_page.SaveBalance">

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="309dp"
            android:layout_height="62dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/white"
            android:id="@+id/layoutBalanceInput">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/balanceText" android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/saveCurrencyButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:text="Salvar Saldo"
            app:layout_constraintEnd_toEndOf="@+id/layoutBalanceInput"
            app:layout_constraintStart_toStartOf="@+id/layoutBalanceInput"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/layoutBalanceInput"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>