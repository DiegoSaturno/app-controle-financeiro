<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Nome da Transação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:textSize="16sp"/>
    <TextView
            android:text="Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataTextView"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/nameTextView"
            android:textSize="16sp"/>
    <TextView
            android:text="R$ 10.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/valueTextView" app:layout_constraintTop_toBottomOf="@+id/dataTextView"
            android:layout_marginTop="32dp" android:textSize="24sp"/>
    <TextView
            android:text="Saldo anterior:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView4" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/valueTextView"/>
    <TextView
            android:text="R$ 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valueBeforeTextView" app:layout_constraintStart_toEndOf="@+id/valueTextView"
            android:layout_marginStart="32dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/valueTextView"/>
    <TextView
            android:text="Saldo atualizado:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="R$ 20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valueAfterTextView" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>